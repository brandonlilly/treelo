<div class="session-container">

  <div class="session-panel">
    <h1>Create an Account</h1>

    <form action="/users" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label>Email<br>
        <input name="user[email]" type="text" placeholder="e.g., hermione.granger@spew.org.uk"><br>
      </label><br>
      <label>Password<br>
        <input name="user[password]" type="password" placeholder="e.g., ••••••••••••"><br>
      </label><br>
      <button class="btn btn-primary">Create New Account</button><br>
    </form>
  </div>

</div>
